    "babel-loader": "^8.2.3",
    "eslint": "^7.32.0",
    "eslint-codeframe-formatter": "^1.0.2",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
